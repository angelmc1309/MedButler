<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Help and Support">

        <EditTextPreference
            android:defaultValue=""
            android:key="key_feedback"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Got any queries? We are happy to help!"
            android:title="Send Feedback"
            android:dialogMessage="Got any queries? We are happy to help!"
            android:dialogTitle="Send Feedback" />

        <Preference
            android:title="FAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:summary="View frequently asked questions"
            android:key="key_faq"/>
    </PreferenceCategory>
</PreferenceScreen>