<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/backgroundLayout"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/medicineLabel"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:textSize="32dp"
        android:textColor="@android:color/black"
        android:text="@string/medsDesc"
        android:textAlignment="center"


        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/med_1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="Ibuprofeno cada 6 hores"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/med_2"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/med_2"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="Ibuprofeno cada 6 hores"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/medicineLabel"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/med_3"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="Ibuprofeno cada 6 hores"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/med_1"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout

        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageButton
            android:id="@+id/userButton"
            android:src="@drawable/user_logo"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:onClick="actionUser"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/calendarButton"
            android:src="@drawable/calendar"
            android:onClick="actionCalendar"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/medsButton"
            android:src="@drawable/meds_logo"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/settingsButton"
            android:src="@drawable/settings"
            android:onClick="actionSettings"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

    </LinearLayout>

    <Button
        android:id="@+id/afegirMedicines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="84dp"
        android:text="Afegir Medicines"
        android:onClick="actionAddMed"
        app:layout_constraintBottom_toTopOf="@+id/my_toolbar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>