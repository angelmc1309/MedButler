<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/backgroundLayout"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/toolbar_treatment"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:divider="@drawable/empty_tall_divider"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1">


        <TextView
            android:id="@+id/med_list"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/list_medicines"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/diet_list"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="actionDietList"
            android:text="@string/diets_nutrition"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_marginBottom="1dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/med_1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:gravity="start|bottom"
        android:background="@android:color/transparent"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="Ibuprofeno cada 400mg - every 24 hours - one week - 08:30 - notification ON"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/med_2"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/med_2"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="start|bottom"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="Exemple: Ibuprofeno 600mg - every 24 hours - one week - 08:30 - notification ON"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_treatment"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/med_3"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:gravity="start|bottom"
        android:text="Ibuprofeno cada 600mg - every 24 hours - one week - 08:30 - notification OFF"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/med_1"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout

        android:showDividers="middle"
        android:divider="@drawable/empty_tall_divider"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageButton
            android:id="@+id/userButton"
            android:src="@drawable/user_logo"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:onClick="actionUser"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/calendarButton"
            android:src="@drawable/calendar"
            android:onClick="actionCalendar"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/medsButton"
            android:src="@drawable/meds_logo"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:id="@+id/settingsButton"
            android:src="@drawable/settings"
            android:onClick="actionSettings"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

    </LinearLayout>

    <Button
        android:id="@+id/addMedicine"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginEnd="24dp"
        android:paddingTop="10dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="36dp"
        android:onClick="actionAddMed"
        android:text="Add Medicine"
        app:layout_constraintBottom_toTopOf="@id/my_toolbar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>