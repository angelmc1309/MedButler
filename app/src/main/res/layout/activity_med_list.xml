<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/medicineLabel"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:textSize="32dp"
        android:textColor="@android:color/black"
        android:text="@string/medsDesc"
        android:textAlignment="center"


        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/med_1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="Ibuprofeno cada 6 hores"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/med_2"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/med_2"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="Ibuprofeno cada 6 hores"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/medicineLabel"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/med_3"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:text="Ibuprofeno cada 6 hores"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/med_1"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageButton
            android:id="@+id/userButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingRight="10dp"
            android:onClick="actionUser"
            android:src="@drawable/user_logo" />

        <ImageButton
            android:id="@+id/calendarButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingRight="10dp"
            android:onClick="actionCalendar"

            android:src="@drawable/calendar" />

        <ImageButton
            android:id="@+id/medsButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:paddingRight="10dp"
            android:src="@drawable/meds_logo" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="actionSettings"
            android:background="@color/colorPrimaryDark"
            android:paddingRight="10dp"
            android:src="@drawable/settings" />

    </LinearLayout>

    <Button
        android:id="@+id/afegirMedicines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="84dp"
        android:text="Afegir Medicines"
        android:onClick="actionAddMed"
        app:layout_constraintBottom_toTopOf="@+id/my_toolbar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>