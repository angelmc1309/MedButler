<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/backgroundLayout"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/toolbar_treatment"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:divider="@drawable/empty_tall_divider"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1">


        <TextView
            android:id="@+id/med_list"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="actionMedList"
            android:text="@string/list_medicines"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_marginBottom="1dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/diet_list"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/diets_nutrition"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="0.5"
            android:layout_marginBottom="1dp"/>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:divider="@drawable/empty_tall_divider"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageButton
            android:id="@+id/userButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="actionUser"
            android:scaleType="fitCenter"
            android:src="@drawable/user_logo" />

        <ImageButton
            android:id="@+id/calendarButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="actionCalendar"
            android:scaleType="fitCenter"
            android:src="@drawable/calendar" />

        <ImageButton
            android:id="@+id/medsButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/meds_logo" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="actionSettings"
            android:scaleType="fitCenter"
            android:src="@drawable/settings" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="45dp"
        android:paddingRight="16dp"
        android:paddingBottom="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_treatment"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="221dp">

            <com.ms.square.android.expandabletextview.ExpandableTextView
                android:id="@+id/expandable_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:animDuration="200"
                app:maxCollapsedLines="2">

                <TextView
                    android:id="@+id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp" />

                <ImageButton
                    android:id="@+id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@android:color/transparent"
                    android:padding="16dp" />
            </com.ms.square.android.expandabletextview.ExpandableTextView>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/med_3"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:font="@font/averia_serif_libre_light"
        android:fontFamily="@font/averia_serif_libre_light"
        android:gravity="start|bottom"
        android:text="Ibuprofeno cada 600mg - every 24 hours - one week - 08:30 - notification OFF"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/addDiet"
        android:layout_width="118dp"
        android:layout_height="55dp"
        android:layout_marginEnd="24dp"
        android:paddingTop="10dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="36dp"
        android:onClick="actionAddDiet"
        android:text="Add Diet"
        app:layout_constraintBottom_toTopOf="@id/my_toolbar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>